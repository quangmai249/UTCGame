<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UTCGame</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UTCGame.styles.css" asp-append-version="true" />

    <link rel="icon" type="image/x-icon" href="https://static.vecteezy.com/system/resources/previews/010/308/394/non_2x/ninja-logo-ninja-kids-game-logo-free-vector.jpg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        .navbar-brand span {
            border: 1px solid;
            font-family: fantasy;
            color: #D01B1B;
            text-align: center;
            padding: 10px 40px;
        }

            .navbar-brand span:hover {
                background-color: #D01B1B;
                color: white;
            }

        .icon_social_media a:hover {
            opacity: 75%;
        }

        .nav-link {
            font-size: 16px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span>UTCGame</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between row">
                    <ul class="nav justify-content-left">
                        <li class="nav-item col-md-2 text-md-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item col-md-2 text-md-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="NewsEvents">
                                News & Events
                            </a>
                        </li>
                        <li class="nav-item col-md-2 text-md-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Support">
                                Support
                            </a>
                        </li>
                        <li class="nav-item col-md-2 text-md-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                        <li class="nav-item col-md-2 text-md-center">
                            <a class="nav-link text-dark btn btn-outline-light" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                Register
                            </a>
                        </li>
                        <li class="nav-item col-md-2 text-md-center">
                            <a class="nav-link text-dark btn btn-outline-light" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                Login
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer class="footer bg-danger">
        <div class="icon_social_media small text-light text-center">
            <a class="btn fa fa-youtube bg-light text-danger" href="https://youtube.com"></a>
            <a class="btn bg-light text-dark" href="https://x.com">X</a>
            <a class="btn fa fa-instagram bg-light text-danger" href="https://mail.google.com"></a>
            <a class="btn fa fa-facebook bg-light text-primary" href="https://facebook.com"></a>
            <a class="btn fa fa-envelope-o bg-light text-success" href="https://mail.google.com"></a>
            <a class="btn bg-light text-primary" href="https://mail.google.com">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-discord" viewBox="0 0 16 16">
                    <path d="M13.545 2.907a13.2 13.2 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.2 12.2 0 0 0-3.658 0 8 8 0 0 0-.412-.833.05.05 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.04.04 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032q.003.022.021.037a13.3 13.3 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019q.463-.63.818-1.329a.05.05 0 0 0-.01-.059l-.018-.011a9 9 0 0 1-1.248-.595.05.05 0 0 1-.02-.066l.015-.019q.127-.095.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.05.05 0 0 1 .053.007q.121.1.248.195a.05.05 0 0 1-.004.085 8 8 0 0 1-1.249.594.05.05 0 0 0-.03.03.05.05 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.2 13.2 0 0 0 4.001-2.02.05.05 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.03.03 0 0 0-.02-.019m-8.198 7.307c-.789 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612m5.316 0c-.788 0-1.438-.724-1.438-1.612s.637-1.613 1.438-1.613c.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612" />
                </svg>
            </a>
            <br />  
            &copy; UTCGame - since 2024 -
            <i class="fa fa-map-marker" aria-hidden="true">
                <a class="text-light" href="https://maps.app.goo.gl/AQELhf4gKap3DjYJ6">HaNoi, VietNam</a>
            </i>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
