@model UTCGame.Areas.FolderMedia.Models.FolderMediaModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FolderMedia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FolderMediaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FolderMediaName) <i>( @Directory.GetFiles("wwwroot/media/" + Model.FolderMediaName).Length files )</i>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvtive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvtive)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FolderMediaID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    </form>
</div>

