@model IEnumerable<UTCGame.Areas.Employee.Models.EmployeeModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <p>
            <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
        </p>
    </div>
    <div class="col-md-2">
        <form method="get">
            <input type="text" placeholder="Email..." name="_search" />
            <input class="btn btn-outline-primary" type="submit" hidden />
        </form>
    </div>
    <div class="col-md-1">
        <form method="get">
            <select name="_sort" onchange="this.form.submit()">
                <option>Filter</option>
                <option value="az">Title (A-Z)</option>
                <option value="za">Title (Z-A)</option>
                <option value="active">Active</option>
                <option value="!active">Not Active</option>
            </select>
        </form>
    </div>
</div>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEmployeeActive)
            </th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeEmail)
                </td>
                <td>
                    <input type="password" value="@Html.DisplayFor(modelItem => item.EmployeePassword)" disabled />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region.RegionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEmployeeActive)
                </td>
                <td>
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.EmployeeID">Details</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
